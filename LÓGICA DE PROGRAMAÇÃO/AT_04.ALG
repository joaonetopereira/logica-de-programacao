Algoritmo "at_04"

Var
v1, v2 ,v3, v4, media:real


Inicio
      escreva("Informe a 1 nota: ")
      leia(v1)
      escreva("Informe a 2 nota: ")
      leia(v2)
      escreva("Informe a 3 nota: ")
      leia(v3)
      escreva("Informe a 4 nota: ")
      leia(v4)

      limpatela
      media <- (v1 + v2 + v3 + v4)/4

      escreva("A sua media é: ",media)



Fimalgoritmo